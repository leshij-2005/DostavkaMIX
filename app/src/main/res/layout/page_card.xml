<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:foo="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/dish_img_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        >

        <ru.chaihanamix.denis.dostavkamix.CustomView.TextViewPlus
            android:id="@+id/dish_name_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/dish_weight_frag"

            android:text="Name Dish1Name Dish1Name Dish11Name Dish1"
            android:textColor="@color/md_white_1000"
            android:textSize="20sp"
            foo:customFont="fonts/GothaProReg.otf"/>

        <ru.chaihanamix.denis.dostavkamix.CustomView.TextViewPlus
            android:id="@+id/dish_price_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="3sp"
            android:layout_alignParentRight="true"

            android:gravity="right"
            android:text="1024 P"
            android:textColor="@color/accent_color"
            android:textSize="18sp"
            foo:customFont="fonts/GothaProReg.otf"/>

        <ru.chaihanamix.denis.dostavkamix.CustomView.TextViewPlus
            android:id="@+id/dish_weight_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/dish_price_frag"

            android:gravity="right"
            android:text="1060 гр."
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            foo:customFont="fonts/GothaProReg.otf"/>

    </RelativeLayout>

    <ru.chaihanamix.denis.dostavkamix.CustomView.TextViewPlus
        android:id="@+id/dish_descript_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:text="Name DishName DishName DishName DishName DishName DishName DishName DishName DishName DishName Dish"
        android:textColor="@color/dish_descript_color"
        android:textSize="14sp"
        foo:customFont="fonts/GothaProReg.otf"
        />
</LinearLayout>