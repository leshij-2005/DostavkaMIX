<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:foo="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icon_shape"
        android:layout_width="wrap_content"
        android:layout_height="140sp"

        android:layout_centerInParent="true"
        android:src="@drawable/icon_shape"/>
    <ru.chaihanamix.denis.dostavkamix.CustomView.TextViewPlus
        foo:customFont="fonts/GothaProReg.otf"
        android:id="@+id/text_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/icon_shape"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"

        android:text="При первом заказе из приложения роллы в подарок"
        android:textSize="18sp"
        android:textColor="@color/md_white_1000"
        />
</RelativeLayout>