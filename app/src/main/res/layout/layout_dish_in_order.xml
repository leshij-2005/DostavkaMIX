<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20sp"
        android:paddingLeft="10sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp">

        <ru.dostavkamix.denis.dostavkamix.Custom.customNetworkImageView
            android:id="@+id/img"
            android:layout_width="90sp"
            android:layout_height="90sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img"
            android:layout_centerVertical="true"
            android:paddingLeft="10sp">

            <ru.dostavkamix.denis.dostavkamix.Custom.TextViewPlus
                android:id="@+id/dish_name"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:text="Название блюда может быть в 2 строки"
                android:textColor="@color/md_white_1000"
                />

            <ru.dostavkamix.denis.dostavkamix.Custom.TextViewPlus
                android:id="@+id/sum"
                android:layout_below="@+id/dish_name"
                android:layout_alignLeft="@+id/dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 250 P"
                android:textColor="@color/accent_color"
                android:layout_marginTop="10sp"/>

            <ru.dostavkamix.denis.dostavkamix.Custom.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250 гр."
                android:layout_toRightOf="@+id/sum"
                android:layout_alignTop="@+id/sum"
                android:layout_marginLeft="20sp"/>
        </RelativeLayout>

        <ru.dostavkamix.denis.dostavkamix.Custom.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"
            android:textColor="@color/md_white_1000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_border_white"/>

</LinearLayout>