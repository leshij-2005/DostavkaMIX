<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ru.dostavkamix.denis.dostavkamix.Custom.TextViewPlus
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="БАЛЛЫ"
        android:textColor="@color/color_hint"
        android:textSize="15sp"
        app:customFont="fonts/GothaProLig.otf"
        android:layout_centerVertical="true"/>

    <ru.dostavkamix.denis.dostavkamix.Custom.TextViewPlus
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/title"
        android:background="@drawable/background_count_points"
        android:paddingBottom="2sp"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:paddingTop="2sp"
        android:text="200 450"
        android:textColor="@color/toolbar_background_color"
        android:textSize="13sp"
        android:visibility="gone"
        app:customFont="fonts/GothaProBla.otf"
        android:layout_marginLeft="5sp"
        android:layout_centerVertical="true"/>

</RelativeLayout>