<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:foo="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/base_color"
              android:orientation="vertical">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/dish_img_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        >

        <ru.dostavkamix.denis.dostavkamix.CustomView.TextViewPlus
            android:id="@+id/dish_name_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Name Dish1Name Dish1Name Dish1"
            android:textColor="@color/md_white_1000"
            android:textSize="23sp"
            foo:customFont="fonts/GothaProReg.otf"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <ru.dostavkamix.denis.dostavkamix.CustomView.TextViewPlus
                android:id="@+id/dish_price_frag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="3sp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="1024 P"
                android:textColor="@color/accent_color"
                android:textSize="22sp"
                foo:customFont="fonts/GothaProReg.otf"/>

            <ru.dostavkamix.denis.dostavkamix.CustomView.TextViewPlus
                android:id="@+id/dish_weight_frag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:text="1060 гр."
                android:textColor="@color/md_white_1000"
                android:textSize="15sp"
                foo:customFont="fonts/GothaProReg.otf"/>
        </LinearLayout>

    </LinearLayout>

    <ru.dostavkamix.denis.dostavkamix.CustomView.TextViewPlus
        android:id="@+id/dish_descript_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:text="Name DishName DishName DishName DishName DishName DishName DishName DishName DishName DishName Dish"
        android:textColor="@color/dish_descript_color"
        android:textSize="14sp"
        foo:customFont="fonts/GothaProReg.otf"
        />

    <ru.dostavkamix.denis.dostavkamix.CustomView.TextViewPlus
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:gravity="center_horizontal"
        android:text="Порции"
        android:textColor="@color/md_white_1000"
        android:textSize="20sp"
        foo:customFont="fonts/GothaProReg.otf"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/count_button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/transition_button"
            android:tag="1"
            android:text="1"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/button_count_text_size"/>

        <Button
            android:id="@+id/count_button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/transition_button"
            android:tag="2"
            android:text="2"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/button_count_text_size"/>

        <Button
            android:id="@+id/count_button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/transition_button"
            android:tag="3"
            android:text="3"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/button_count_text_size"/>

        <Button
            android:id="@+id/count_button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/transition_button"
            android:tag="4"
            android:text="4"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/button_count_text_size"/>

        <Button
            android:id="@+id/count_button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/transition_button"
            android:tag="5"
            android:text="5"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/button_count_text_size"/>

        <Button
            android:id="@+id/count_button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/transition_button"
            android:tag="6"
            android:text="6"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/button_count_text_size"/>

        <Button
            android:id="@+id/count_button7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/transition_button"
            android:tag="7"
            android:text="7"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/button_count_text_size"/>

        <Button
            android:id="@+id/count_button8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/transition_button"
            android:tag="8"
            android:text="8"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/button_count_text_size"/>

        <Button
            android:id="@+id/count_button9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/transition_button"
            android:tag="9"
            android:text="9"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/button_count_text_size"/>

        <Button
            android:id="@+id/count_button10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.92"

            android:background="@drawable/transition_button"
            android:singleLine="true"
            android:tag="10"
            android:text="10+"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/button_count_text_size"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/inBag"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="6sp"
        android:background="@drawable/rounded_button_on_select">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/accent_color"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20sp"
                android:layout_height="25sp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10sp"
                android:background="@color/accent_color"
                android:scaleType="fitXY"
                android:src="@drawable/bag_black"/>

            <ru.dostavkamix.denis.dostavkamix.CustomView.TextViewPlus
                android:id="@+id/text_but_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/accent_color"

                android:text="В корзину"

                android:textColor="@color/base_color"
                android:textSize="20sp"
                foo:customFont="fonts/GothaProReg.otf"
                />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>